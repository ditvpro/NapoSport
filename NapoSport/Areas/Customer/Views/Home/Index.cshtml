                                <a href="#!" class="btn btn-light float-end icon-hover"><i class="fas fa-heart text-secondary"></i></a>
                                <h5 class="text-start m-1">@product.Price</h5>
                                <div class="col mt-3">
                                    <p class="text-muted mb-0">@product.Name</p>
                                    <p class="text-muted">@product.Brand.Name</p>
                                </div>
                            </div>
