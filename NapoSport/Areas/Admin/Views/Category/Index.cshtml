@model List<Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
}
<div class="card w-100">
    <div class="card-title bg-primary text-center text-light p-3">
        <h4>QUẢN LÝ DANH MỤC</h4>
    </div>
    <div class="table-responsive">
        <div class="card-body">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-outline-success">Thêm danh mục</a>
            <hr/>
            <table id="tblData" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Thứ tự hiển thị</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/category.js"></script>
}