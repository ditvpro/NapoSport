@model Category
@{
    ViewData["Title"] = "Chỉnh sửa danh mục " + Model.Name;
}
<form method="post">
    <div class="card border-primary mb-3" style="max-width: 100%;">
        <div class="card-header text-center text-light fs-3 badge bg-primary w-100">Chỉnh sửa danh mục</div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <div class="form-text mb-3">
                        <input asp-for="Id" hidden />
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-text mb-3">
                        <label asp-for="DisplayOrder"></label>
                        <input asp-for="DisplayOrder" type="number" class="form-control">
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <div class="form-text">
                        <label>Chọn hình ảnh</label>
                        <input asp-for="Thumbnail" type="file" class="form-control">
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-outline-primary w-100">Cập nhật</button>
                </div>
                <div class="col-md-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark w-50">Trở về</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}