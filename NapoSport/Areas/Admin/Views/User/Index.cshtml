@{
    ViewData["Title"] = "Quản lý người dùng";
}
<div class="card w-100">
    <div class="card-title bg-primary text-center text-light p-3">
        <h4>QUẢN LÝ NGƯỜI DÙNG</h4>
    </div>
    <div class="table-responsive">
        <div class="card-body">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-success">Thêm người dùng</a>
            <hr />
            <table id="tblData" class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Tên công ty</th>
                        <th>Vai trò</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/user.js"></script>
}