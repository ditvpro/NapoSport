@model List<Brand>
@{
    ViewData["Title"] = "Quản lý thương hiệu";
}
<div class="card w-100">
    <div class="card-title bg-primary text-center text-light p-3">
        <h4>QUẢN LÝ THƯƠNG HIỆU</h4>
    </div>
    <div class="table-responsive">
        <div class="card-body">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-outline-success">Thêm thương hiệu</a>
            <hr />
            <table class="table table-striped table-bordered">
                <thead>
                    <tr class="text-center">
                        <th scope="col" class="col-md-2">Tên thương hiệu</th>
                        <th scope="col" class="col-md-2">Logo</th>
                        <th scope="col" class="col-md-3">Thông tin</th>
                        <th scope="col" class="col-md-3">Website</th>
                        <th scope="col" class="col-md-2" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td scope="row">@item.Name</td>
                            <td>@item.LogoUrl</td>
                            <td>@item.Description</td>
                            <td>@item.Website</td>
                            <td class="col-md-1 text-center">
                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Sửa</a>
                            </td>
                            <td class="col-md-1 text-center">
                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>